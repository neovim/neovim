{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/../.deps",
      "hidden": true
    },
    {
      "name": "ci",
      "inherits": ["base"]
    },
    {
      "name": "external_deps",
      "description": "Build neovim with external deps on ubuntu",
      "cacheVariables": {
        "USE_BUNDLED":"OFF",
        "USE_BUNDLED_LIBVTERM":"ON",
        "USE_BUNDLED_TS":"ON"
      },
      "inherits": ["base"]
    }
  ]
}
