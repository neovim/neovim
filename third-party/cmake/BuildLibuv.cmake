ExternalProject_Add(libuv
  PREFIX ${DEPS_BUILD_DIR}
  URL ${LIBUV_URL}
  CMAKE_ARGS -DCMAKE_INSTALL_PREFIX=${DEPS_INSTALL_DIR}
  DOWNLOAD_DIR ${DEPS_DOWNLOAD_DIR}/libuv
  DOWNLOAD_COMMAND ${CMAKE_COMMAND}
